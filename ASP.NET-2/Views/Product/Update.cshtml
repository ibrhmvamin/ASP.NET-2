@model ProductAddViewModel

<div class="container mt-5">
    <h2 class="mb-4 text-center">Update Product</h2>
    <form asp-action="Update" asp-controller="Product">
        <div class="form-group">
            <label asp-for="Product.Name" class="form-label"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Product.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Description" class="form-label"></label>
            <input asp-for="Product.Description" class="form-control" />
            <span class="text-danger" asp-validation-for="Product.Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Price" class="form-label"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span class="text-danger" asp-validation-for="Product.Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Discount" class="form-label"></label>
            <input asp-for="Product.Discount" class="form-control" />
            <span class="text-danger" asp-validation-for="Product.Discount"></span>
        </div>
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
